<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ResultText"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text="@string/result"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultOutput"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/ResultText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <EditText
        android:id="@+id/elGasActivityInput"
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:hint="Electricity Gas Activity"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultOutput" />

    <EditText
        android:id="@+id/PlInput"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:hint="PL"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/elGasActivityInput" />

    <EditText
        android:id="@+id/PlLongInput"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        android:hint="PL Long"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/PlInput"
        app:layout_constraintTop_toBottomOf="@+id/elGasActivityInput" />


    <EditText
        android:id="@+id/transmissionInput"
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:hint="Transmission"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PlLongInput" />

    <EditText
        android:id="@+id/activatorInput"
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:hint="Activator"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transmissionInput" />

    <EditText
        android:id="@+id/connectionInput"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:hint="Connection"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activatorInput" />

    <EditText
        android:id="@+id/connectionTimesInput"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        android:hint="Connection Times"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/PlInput"
        app:layout_constraintTop_toBottomOf="@+id/activatorInput" />

    <EditText
        android:id="@+id/costAvarInput"
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:layout_marginTop="244dp"
        android:hint="Cost Avaria"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultOutput" />

    <EditText
        android:id="@+id/costPlanInput"
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:hint="Cost Plan"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/costAvarInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="Calculate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/costPlanInput" />


</androidx.constraintlayout.widget.ConstraintLayout>
